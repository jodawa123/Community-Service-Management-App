<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/yellow"
    app:cardCornerRadius="15dp"
    app:cardElevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Add Label and Radio Button -->
        <LinearLayout
            android:id="@+id/add_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/add_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alatsi"
                android:gravity="center"
                android:text="Add"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/site_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:contentDescription="Select site" />
        </LinearLayout>

        <!-- Site Title -->
        <TextView
            android:id="@+id/site_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:accessibilityTraversalBefore="@id/site_description"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/alatsi"
            android:text="Site Name"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/others"
            app:layout_constraintStart_toEndOf="@id/add_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Site Description -->
        <TextView
            android:id="@+id/site_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/open_dyslexic_bold"
            android:text="Description goes here"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintStart_toEndOf="@id/add_layout"
            app:layout_constraintTop_toBottomOf="@id/site_title"
            app:layout_constraintEnd_toStartOf="@id/others"
            android:accessibilityTraversalBefore="@id/site_phone" />

        <!-- Site Phone -->
        <TextView
            android:id="@+id/site_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:accessibilityTraversalBefore="@id/others"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/alatsi"
            android:hint="Not available"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/others"
            app:layout_constraintStart_toEndOf="@id/add_layout"
            app:layout_constraintTop_toBottomOf="@id/site_description" />

        <!-- Others Layout (Students Needed and RatingBar) -->
        <LinearLayout
            android:id="@+id/others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Students Needed -->
            <TextView
                android:id="@+id/students_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/alatsi"
                android:text="8/8"
                android:textColor="@color/gray"
                android:textSize="17sp"
                android:textStyle="bold"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:accessibilityTraversalBefore="@id/ratingBar" />

            <LinearLayout
                android:id="@+id/ratingBarParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@android:style/Widget.Material.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:isIndicator="true"
                    android:numStars="3"
                    android:progressTint="@color/blue"
                    android:rating="0"
                    android:stepSize="1"
                    android:contentDescription="Rating:" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>