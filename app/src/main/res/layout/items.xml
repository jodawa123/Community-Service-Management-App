<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/yellow"
    app:cardCornerRadius="15dp"
    app:cardElevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Add Label and Radio Button -->
        <LinearLayout
            android:id="@+id/add_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="Add site option"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/add_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alatsi"
                android:gravity="center"
                android:text="Add"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/site_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:contentDescription="Select site" />
        </LinearLayout>

        <!-- Site Title -->
        <TextView
            android:id="@+id/site_title"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:accessibilityTraversalBefore="@id/site_description"
            android:contentDescription="Site name"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/alatsi"
            android:hint="Site Name"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/others"
            app:layout_constraintStart_toEndOf="@id/add_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Site Description -->
        <TextView
            android:id="@+id/site_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/open_dyslexic_bold"
            android:hint="Description goes here"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="Site description"
            app:layout_constraintStart_toEndOf="@id/add_layout"
            app:layout_constraintTop_toBottomOf="@id/site_title"
            app:layout_constraintEnd_toStartOf="@id/others"
            android:accessibilityTraversalBefore="@id/site_phone" />

        <!-- Site Phone -->
        <TextView
            android:id="@+id/site_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/alatsi"
            android:hint="Not available"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="Site phone number"
            app:layout_constraintStart_toEndOf="@id/add_layout"
            app:layout_constraintTop_toBottomOf="@id/site_description"
            app:layout_constraintEnd_toStartOf="@id/others"
            android:accessibilityTraversalBefore="@id/others" />

        <!-- Others Layout (Students Needed and Location Icon) -->
        <LinearLayout
            android:id="@+id/others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:clickable="false"
            android:focusableInTouchMode="true"
            android:contentDescription="Students needed and location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Students Needed -->
            <TextView
                android:id="@+id/students_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/alatsi"
                android:text="8/8"
                android:textColor="@color/gray"
                android:textSize="17sp"
                android:textStyle="bold"
                android:contentDescription="Students needed: 8 out of 8"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:accessibilityTraversalBefore="@id/location_icon" />

            <!-- Location Icon -->
            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Location icon"
                android:focusable="true"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/baseline_location_pin_24" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>