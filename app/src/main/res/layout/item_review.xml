<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="8dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:contentDescription="Review card for John Doe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Name and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="Reviewer name and time">

            <TextView
                android:id="@+id/reviewerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Reviewer name: John Doe"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/alatsi"
                android:text="John Doe"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/reviewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:contentDescription="Review time: 6 months ago"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/alatsi"
                android:text="6 months ago"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- RatingBar -->
        <RatingBar
            android:id="@+id/ratingBar"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            android:numStars="3"
            android:progressTint="#FFC107"
            android:rating="3"
            android:stepSize="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="Rating: 3 out of 3 stars" />

        <!-- Comment -->
        <TextView
            android:id="@+id/reviewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_dyslexic_regular"
            android:text="The booking experience was fairly seamless and until the hour before the appointment everything was perfect."
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="Review comment: The booking experience was fairly seamless and until the hour before the appointment everything was perfect." />
    </LinearLayout>
</androidx.cardview.widget.CardView>