<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/alatsi"
            android:gravity="center"
            android:text="LEADERBOARD"
            android:textColor="@color/blue"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- Empty State View -->
        <LinearLayout
            android:id="@+id/emptyStateView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="Empty leaderboard"
                android:src="@drawable/empty_cuate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_dyslexic_regular"
                android:text="No students found"
                android:textColor="#666666"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Top 3 Students - Fixed Layout (No HorizontalScrollView) -->
        <LinearLayout
            android:id="@+id/topStudentsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 2nd Place -->
            <LinearLayout
                android:id="@+id/secondPlaceLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/secondPlaceImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/medal" />

                <TextView
                    android:id="@+id/secondPlaceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/open_dyslexic_bold"
                    android:hint="Jane Doe"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/secondPlaceHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alatsi"
                    android:hint="0 hours"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 1st Place (Centered and Larger) -->
            <LinearLayout
                android:id="@+id/firstPlaceLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/firstPlaceImage"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/one" />

                <TextView
                    android:id="@+id/firstPlaceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/open_dyslexic_bold"
                    android:text="1st Place"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/firstPlaceHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alatsi"
                    android:text="0 hours"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 3rd Place -->
            <LinearLayout
                android:id="@+id/thirdPlaceLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/thirdPlaceImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/medal3" />

                <TextView
                    android:id="@+id/thirdPlaceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/open_dyslexic_bold"
                    android:hint="John Doe"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/thirdPlaceHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alatsi"
                    android:hint="0 hours"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />

        <!-- Remaining Students List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/remainingStudentsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>