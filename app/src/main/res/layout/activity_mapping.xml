<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mapping">

        <!-- Google Map Fragment -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Tips Panel -->
        <androidx.cardview.widget.CardView
            android:id="@+id/tips_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow"
                    android:padding="16dp">

                        <TextView
                            android:id="@+id/tips_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alatsi"
                            android:text="Explore community service opportunities nearby! Tap on the pin to learn more or navigate."
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/dismiss_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tips_text"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/editbg2"
                            android:layout_marginTop="10dp"
                            android:text="Dismiss" />
                </RelativeLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>
