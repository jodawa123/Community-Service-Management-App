<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blob_scene_haikei__1_"
    android:padding="16dp"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Image -->

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="53dp"
            android:layout_height="44dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/user_name"
            app:srcCompat="@drawable/baseline_arrow_forward_24" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alatsi"
            android:text="PROFILE"
            android:textColor="@color/gray"
            android:textSize="50sp"
            android:textStyle="bold"
           />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_below="@id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:contentDescription="Profile Picture"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />


        <LinearLayout
            android:id="@+id/site_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="30dp"
            android:background="@color/blue"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/drop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aclonica"
                    android:text="Drop"
                    android:textColor="@color/yellow"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/drop_site_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:checked="false" />
            </LinearLayout>



            <TextView
                android:id="@+id/picked_site_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/alatsi"
                android:text="Selected Site: "
                android:textColor="@color/white"
                android:textSize="20sp" />

            <!-- Available Slots -->
            <TextView
                android:id="@+id/available_slots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/aclonica"
                android:text="Slots: "
                android:textColor="@color/yellow"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/documents_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/site_section"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/blue">

            <TextView
                android:id="@+id/documents_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/alatsi"
                android:text="What is expected of you?"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/white"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/doc1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alatsi"
                    android:text="Community Service\n Guidlines.docx"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/doc1_download"
                    android:layout_width="50dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="150dp"
                    app:srcCompat="@drawable/baseline_download_24" />

            </LinearLayout>

            </LinearLayout>

        <TextView
            android:id="@+id/pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/documents_section"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/aclonica"
            android:padding="20dp"
            android:text="PICK YOUR START DATE IN THE CALENDER"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pick"
            android:elevation="50dp"
            android:firstDayOfWeek="2"
            android:focusedMonthDateColor="@color/blue"
            android:visibility="visible"
            android:dateTextAppearance="@style/CalendarDateText"
            android:weekDayTextAppearance="@style/CalendarWeekDayText"
            android:selectedWeekBackgroundColor="@color/blue"
            android:selectedDateVerticalBar="@color/blue"/>

        <!-- Countdown Section -->
        <LinearLayout
            android:id="@+id/hours_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/calendarView"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/weeksRemaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alatsi"
                android:lineSpacingExtra="10sp"
                android:text="Weeks Remaining: 10"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/hoursRemaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/alatsi"
                android:lineSpacingExtra="10sp"
                android:text="Hours Remaining: 90"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="17sp" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
